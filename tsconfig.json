{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "alwaysStrict": true,
    "baseUrl": "./",
    "downlevelIteration": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "CommonJS",
    "moduleResolution": "Node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "paths": {
      "@client/*": ["src/client/*"],
      "@client/apps/*": ["src/client/apps/*"],
      "@client/components/*": ["src/client/components/*"],
      "@client/constants": ["src/client/constants"],
      "@client/hooks/*": ["src/client/hooks/*"],
      "@client/interceptors/*": ["src/client/interceptors/*"],
      "@client/managers/*": ["src/client/managers/*"],
      "@client/styles/*": ["src/client/styles/*"],
      "@client/utils/*": ["src/client/utils/*"],

      "@common/*": ["src/common/*"],
      "@common/components/*": ["src/common/components/*"],
      "@common/constants": ["src/common/constants"],
      "@common/enums": ["src/common/enums"],
      "@common/errors": ["src/common/errors"],
      "@common/hooks/*": ["src/common/hooks/*"],
      "@common/managers/*": ["src/common/managers/*"],
      "@common/messages/*": ["src/common/messages/*"],
      "@common/services/*": ["src/common/services/*"],
      "@common/theme": ["src/common/theme"],
      "@common/types": ["src/common/types"],
      "@common/utils/*": ["src/common/utils/*"],

      "@docs/*": ["src/docs/*"],

      "@extension/*": ["src/extension/*"],
      "@extension/components/*": ["src/extension/components/*"],
      "@extension/config": ["src/extension/config"],
      "@extension/constants": ["src/extension/constants"],
      "@extension/contracts/*": ["src/extension/contracts/*"],
      "@extension/enums": ["src/extension/enums"],
      "@extension/events/*": ["src/extension/events/*"],
      "@extension/features/*": ["src/extension/features/*"],
      "@extension/fonts/*": ["src/extension/fonts/*"],
      "@extension/hooks/*": ["src/extension/hooks/*"],
      "@extension/icons/*": ["src/extension/icons/*"],
      "@extension/images/*": ["src/extension/images/*"],
      "@extension/managers/*": ["src/extension/managers/*"],
      "@extension/messages/*": ["src/extension/messages/*"],
      "@extension/message-handlers/*": ["src/extension/message-handlers/*"],
      "@extension/modals/*": ["src/extension/modals/*"],
      "@extension/models/*": ["src/extension/models/*"],
      "@extension/pages/*": ["src/extension/pages/*"],
      "@extension/repositories/*": ["src/extension/repositories/*"],
      "@extension/routers/*": ["src/extension/routers/*"],
      "@extension/selectors": ["src/extension/selectors"],
      "@extension/services/*": ["src/extension/services/*"],
      "@extension/styles/*": ["src/extension/styles/*"],
      "@extension/translations": ["src/extension/translations"],
      "@extension/types": ["src/extension/types"],
      "@extension/utils/*": ["src/extension/utils/*"],

      "@middleware/*": ["src/middleware/*"],
      "@middleware/message-brokers/*": ["src/middleware/message-brokers/*"],
      "@middleware/utils/*": ["src/middleware/utils/*"],

      "@test/*": ["test/*"],
      "@test/utils/*": ["test/utils/*"]
    },
    "removeComments": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": false,
    "strictBindCallApply": false,
    "strictNullChecks": true,
    "strictPropertyInitialization": false,
    "suppressImplicitAnyIndexErrors": true,
    "target": "ES5"
  }
}
